<!DOCTYPE html>
<html>
<head>
    <title>Трекер</title>
</head>
<body>
    <div class="calendar-container">
        <div class="header">
    <a href="/tracker?year=<%= prevYear %>&month=<%= prevMonth %>" class="common-button prev">
    </a>
    <h2><%= calendar.monthName %> <%= calendar.year %></h2>
    <a href="/tracker?year=<%= nextYear %>&month=<%= nextMonth %>" class="common-button next">
    </a>
</div>
        
        <div class="days-header">
            <div>Пн</div>
            <div>Вт</div>
            <div>Ср</div>
            <div>Чт</div>
            <div>Пт</div>
            <div>Сб</div>
            <div>Вс</div>
        </div>
        
        <div class="dates-grid">
    <% calendar.days.forEach((day, index) => { %>
        <div class="date-cell <%= day ? '' : 'empty' %> 
            <%= (calendar.year === calendar.currentYear && 
                calendar.monthNumber === calendar.currentMonth && 
                day == calendar.currentDay) ? 'today' : '' %>"
            data-day="<%= day %>"
            data-month="<%= calendar.monthNumber %>"
            data-monthname="<%= calendar.monthName %>"
            data-monthnamerod="<%= calendar.monthNameRod %>"
            data-year="<%= calendar.year %>"
            onclick="openModal(this)">
            
            <% if (day) { %>
                <div class="date-btn"><%= day %></div>
                
                <% const dateKey = `${calendar.year}-${String(calendar.monthNumber)}-${String(day).padStart(2, '0')}`;
                const entry = calendar.entries[dateKey]; %>
                <% if (entry) { %>
                    <div class="stats-circle" data-date="<%= dateKey %>">
                        <svg width="30" height="30">
                            <circle cx="15" cy="15" r="12" fill="transparent"/>
                             <% if (entry.alcohol > 0) { %>
                                <path 
                                    d="M15 3 A12 12 0 0 1 27 15" 
                                    fill="none" 
                                    stroke="#FF4444" 
                                    stroke-width="4"
                                />
                            <% } %>
                            
                            <% if (entry.cigarettes > 0) { %>
                                <path 
                                    d="M27 15 A12 12 0 0 1 15 27" 
                                    fill="none" 
                                    stroke="#4444FF" 
                                    stroke-width="4"
                                />
                            <% } %>
                            
                            <% if (entry.sugar > 0) { %>
                                <path 
                                    d="M15 27 A12 12 0 0 1 3 15" 
                                    fill="none" 
                                    stroke="#FFDD44" 
                                    stroke-width="4"
                                />
                            <% } %>
                        </svg>
                    </div>
                <% } %>
            <% } %>
        </div>
    <% }) %>
</div>

        <div class="modal" id="modal">
            <div class="modal-content">

        <%- include('includes/tracker-modal') %>

            </div>
        </div>
    </div>
<script src="/scripts/tracker.js"></script>
</body>
<style>
    body {
    font-family: "Montserrat", sans-serif;
    padding: 20px;
    background-color: #dfe0d9;
}

.calendar-container {
    max-width: 1200px;
    margin: 40px auto;
    background: white;
    padding: 40px;
    border-radius: 15px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
}

.header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
}

.common-button {
    background: #effe7d;
    color: rgb(43, 48, 51);
    font-weight: bold;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    text-decoration: none;
    font-size: 16px;
    padding: 10px 20px;
}

.arrow-icon {
    width: 24px;
    height: 24px;
    vertical-align: middle;
}

.common-button:hover {
    background: #ecf0f1;
}

.days-header {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 15px;
    margin-bottom: 20px;
    text-align: center;
    font-weight: 600;
    color: #34495e;
    padding: 10px;
}

.dates-grid {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 10px;
}

.date-cell {
    position: relative;
    width: 100%;
    aspect-ratio: 1/1;
    display: flex;
    align-items: center;
    justify-content: center;
}

.date-btn {
    width: 100%;
    height: 100%;
    background: transparent;
    border: none;
    border-radius: 50%;
    font-size: 24px;
    color: #333;
    cursor: pointer;
    transition: all 0.3s;
    display: flex;
    align-items: center;
    justify-content: center;
}

.date-btn:hover {
    background: #bdc3c7;
}

.empty {
    visibility: hidden;
}

.today .date-btn {
    background: #3498db;
    color: white;
    font-weight: bold;
}

.selected-date {
    background: #2ecc71 !important;
    color: white;
}

.stats-circle {
    position: absolute;
    bottom: 20%;
    left: 50%;
    transform: translateX(-50%);
}

.day-number {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-weight: bold;
    font-size: 18px;
}

/* Активный день */
.date-cell.today .stats-circle {
    box-shadow: 0 0 10px rgba(0,0,0,0.3);
}

.modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0,0,0,0.4);
    transition: opacity 0.3s ease;
}

.modal-content {
    background-color: #fefefe;
    margin: 5% auto;
    padding: 25px;
    border: 1px solid #888;
    width: 90%;
    max-width: 600px;
    border-radius: 8px;
    position: relative;
    animation: modalSlideIn 0.3s ease;
}

.close {
    position: absolute;
    right: 25px;
    top: 15px;
    color: #aaa;
    font-size: 32px;
    font-weight: 300;
    cursor: pointer;
    transition: color 0.2s ease;
}

.close:hover {
    color: #666;
}

@keyframes modalSlideIn {
    from {
        transform: translateY(-50px);
        opacity: 0;
    }
    to {
        transform: translateY(0);
        opacity: 1;
    }
}

/* Адаптив для мобильных */
@media (max-width: 768px) {
    .modal-content {
        margin: 10% auto;
        padding: 20px;
        width: 95%;
    }
    
    .close {
        right: 15px;
        top: 10px;
        font-size: 28px;
    }
}

.next::after {
    content: "";
    display: inline-block;
    width: 18px;
    height: 18px;
    background-image: url('/imgs/next.png');
    background-size: contain;
}

.prev::after {
    content: "";
    display: inline-block;
    width: 18px;
    height: 18px;
    background-image: url('/imgs/next.png');
    transform: rotate(180deg);
    background-size: contain;
}
</style>
</html>