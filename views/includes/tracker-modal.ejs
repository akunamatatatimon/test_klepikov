
<span class="close" onclick="closeModal()">&times;</span>
<h3 id="selected-date"></h3>

<form id="dataForm">
    <div class="input-group">
      <div class="type-habit">
        <div class="color-dot red"></div>
        <label>Сегодня употреблено алкоголя (мл.)</label>
      </div>
        
        <input id="alcohol" type="number" min="0" name="alcohol" required>
    </div>
    
    <div class="input-group">
      <div class="type-habit">
        <div class="color-dot blue"></div>
        <label>Сегодня употреблено сигарет (шт.)</label>
      </div>
        
        <input id="cigarettes" type="number" min="0" name="cigarettes" required>
    </div>
    
    <div class="input-group">
      <div class="type-habit">
        <div class="color-dot yellow"></div>
        <label>Сегодня употреблено сахара (г.)</label>
      </div>
        
        <input id="sugar" type="number" min="0" name="sugar" required>
    </div>
    <div class="button-group">
        <button type="submit" class="save-btn">Сохранить</button>
    </div>
    
</form>
<style>
    /* Стили для модального окна */
    .modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        justify-content: center;
        align-items: center;
    }

    .type-habit{
        padding: 5px;
        display: flex;
    }

    .modal-content {
        background-color: #fefefe;
        margin: 5% auto;
        padding: 20px;
        border: 1px solid #888;
        width: 90%;
        max-width: 400px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .close {
        float: right;
        cursor: pointer;
        font-size: 24px;
        color: #aaa;
    }

    .close:hover {
        color: #000;
    }

    h3#selected-date {
        margin-bottom: 20px;
        text-align: center;
        font-size: 1.2em;
    }

    /* Стили для полей ввода */
    .input-group {
        align-items: center;
        margin-bottom: 15px;
    }

    .color-dot {
        width: 16px;
        height: 16px;
        border-radius: 10%;
        margin-right: 5%;
    }

    .red { background: #FF4444; }
    .blue { background: #4444FF; }
    .yellow { background: #effe7d; }

    label {
        flex: 1;
        margin-right: 10px;
    }

    input[type="number"] {
        width: 100%;
        padding: 8px;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 16px;
        background: #f5f5f5;
        text-align: left;
    }

    .save-btn {
        width: 60%;
        padding: 18px;
        background: #effe7d;
        color: black;
        border: none;
        border-radius: 12px;
        cursor: pointer;
        font-size: 20px;
        transition: background 0.3s;
    }

    .save-btn:hover {
        background: #FFCC33;
    }

    .button-group{
        display: flex;
        justify-content: center;
    }
</style>
<script src="/scripts/tracker.js"></script>
