<!-- views/includes/edit-pet-form.ejs -->
<div class="modal-container">
    
    <% if (typeof error !== 'undefined') { %>
        <div class="error-message">
            <%= error %>
        </div>
    <% } %>

    <form id="editPetForm" method="POST" action="/pets/<%= pet.id %>" enctype="multipart/form-data" data-pet="<%= pet %>">
    <h2>Редактирование питомца</h2>

        <div class="form-group">
            <label>Кличка</label>
            <input class="form-item" type="text" name="name" value="<%= pet.name %>" required>
        </div>

        <div class="form-group">
            <label>Вид</label>
            <select class="form-item" name="species" required>
                <option value="Собака" <%= pet.species === 'Собака' ? 'selected' : '' %>>Собака</option>
                <option value="Кошка" <%= pet.species === 'Кошка' ? 'selected' : '' %>>Кошка</option>
                <option value="Хомяк" <%= pet.species === 'Хомяк' ? 'selected' : '' %>>Хомяк</option>
                <option value="Попугай" <%= pet.species === 'Попугай' ? 'selected' : '' %>>Попугай</option>
                <option value="Крыса" <%= pet.species === 'Крыса' ? 'selected' : '' %>>Крыса</option>
            </select>
        </div>

        <div class="form-group">
            <label>Дата рождения</label>
            <input type="text" pattern="(0[1-9]|1[0-9]|2[0-9]|3[01])[.](0[1-9]|1[0-2])[.](19|20)\d{2}" name="birthDate" placeholder="__.__.____" required class="date-input" value="<%= pet.birthDate %>">
        </div>

            <% const yesNoFields = [
            { name: 'hasMark', label: 'Наличие клейма' },
            { name: 'vaccinated', label: 'Вакцинация' },
            { name: 'ectoparasiteTreatment', label: 'Обработка от эктопаразитов' },
            { name: 'deworming', label: 'Обработка от гельминтов' },
            { name: 'sterilized', label: 'Стерилизация' }
          ]; %>
      
          <% yesNoFields.forEach(field => { %>
            <div class="form-group">
              <label><%= field.label %></label>
              <select class="form-item" name="<%= field.name %>" required>
                <option value="" hidden></option>
                <option class="form-item" value="true" <%= pet[field.name] ? 'selected' : '' %>>Да</option>
                <option class="form-item" value="false" <%= !pet[field.name] ? 'selected' : '' %>>Нет</option>
              </select>
            </div>
          <% }); %>

          <div class="upload">
            <label style="font-weight: bold;">Добавьте документы</label>
            <div class="file-upload-wrapper">
              <input type="file" name="new-documents" multiple id="editFileInput" class="hidden-input">
              
              <label for="editFileInput" class="upload-button">
                <span class="plus-icon">+</span>
              </label>
              
            </div>
      
          </div>
      
          <div class="file-list">
            <% pet.documents.forEach(doc => { %>
                <span class="file-date">
                    <%= doc.date %>
                </span>
              <span class="file-name"><img src="../imgs/file.png" style="width: 32px; height: 32px;"><%= doc.filename %><a class="remove-btn" data-path="<%= doc.path %>"></a></span>
            <% }); %>
          </div>

        <div class="form-actions">
            <button type="submit" class="common-button">Сохранить</button>
            <button type="button" 
                    class="btn-delete"
                    onclick="confirmDelete()">Удалить запись</button>
        </div>
    </form>
</div>

<script type="module" src="/scripts/edit-pet.js">
</script>

<style>
.form-group {
    margin-top: 2rem;
    font-size: 20px;
}

.form-item {
    font-family: "Montserrat", sans-serif;
    font-size: 16px;
}

.file-date{
    position: relative; 
    left: 45%;
    top: 10px;
    font-size: 0.75em; 
    color: #666; 
    background: white; 
    padding: 1px 3px; 
    border-radius: 2px; 
    z-index: 1; 
    white-space: nowrap;
}

label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
}

input[type="text"],
input[type="date"],
select {
    width: 100%;
    padding: 0.5rem;
    border: 1px solid #ddd;
    border-radius: 4px;
}

select:focus {
    outline: none;
    border-color: #007bff;
    box-shadow: 0 0 0 2px rgba(0,123,255,.25);
}

.form-group {
    margin-bottom: 1.2rem;
}

.date-input {
    font-size: 18px;
}

.upload {
    display: flex;
    flex-direction: row;
}

.file-upload-wrapper {
    position: relative;
    display: flex;
}

.hidden-input {
    opacity: 0;
    position: absolute;
    left: -9999px;
}

.plus-icon {
    font-size: 32px;
    font-weight: 400;
    position: absolute;
    margin-left: 1vw;
    margin-top: -0.4vw;
    color: #ada8a8;
}

.upload-text {
    color: #666;
    font-size: 12px;
    text-align: center;
}

.file-list {
    margin-top: 10px;
    font-size: 14px;
    color: #444;
}

.file-name {
    display: flex;
    justify-content: space-between;
    text-align: left;
    width: 100%;
    margin-top: 20px;
}

.remove-btn::after {
    content: "";
    display: inline-block;
    width: 28px;
    height: 28px;
    background-image: url('/imgs/bin.png');
    background-size: contain;
}

.form-actions {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.common-button {
    background: #effe7d;
    color: rgb(43, 48, 51);
    font-weight: bold;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    text-decoration: none;
    font-size: 16px;
    padding: 10px 20px;
}

.btn-delete {
    background: none;
    color: rgb(173, 168, 168);
    padding: 12px 24px;
    border-radius: 4px;
    border: none;
    cursor: pointer;
    margin-top: 1rem;
    font-weight: 600;
    font-size: 16px;
}
</style>